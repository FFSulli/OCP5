{% extends "/frontoffice/base.html.twig" %}

{% block stylesheets %}
    <link href="css/style.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Cabin:wght@400;500;700&display=swap" rel="stylesheet">
{% endblock %}

{% block title %}Login{% endblock %}

{% block content %}
    <section class="my-16">
        <h2 class="text-center text-2xl sm:text-4xl font-bold text-indigo-500 dark:text-green-400 py-8">Connexion Ã  mon compte</h2>
        <form method="post" class="w-full lg:w-1/2 flex-col space-y-3 w-1/2 my-8 mx-auto px-16" id="loginForm" name="loginForm">
            <input name="csrfToken" type="hidden" value="{{ csrfToken }}">
            <label class="w-full">Adresse e-mail
                <input type="text" name="email" class="w-full bg-gray-50 dark:bg-gray-400 dark:placeholder-gray-200 rounded focus:ring focus:ring-indigo-500 dark:focus:ring-green-400 focus:outline-none transition ease-in-out duration-200 p-4" placeholder="E-mail">
                {% for key, message in flashes %}
                    {% if key == 'errorEmailIsNull' %}
                        <span class="text-red-400">{{ message }}</span>
                    {% endif %}
                    {% if key == 'errorEmailIsNotValid' %}
                        <span class="text-red-400">{{ message }}</span>
                    {% endif %}
                    {% if key == 'errorEmailDoesntExist' %}
                        <span class="text-red-400">{{ message }}</span>
                    {% endif %}
                {% endfor %}
            </label>
            <label class="w-full">Mot de passe
                <input type="password" name="password" class="w-full bg-gray-50 dark:bg-gray-400 dark:placeholder-gray-200 rounded focus:ring focus:ring-indigo-500 dark:focus:ring-green-400 focus:outline-none transition ease-in-out duration-200 p-4" placeholder="Mot de passe">
                {% for key, message in flashes %}
                    {% if key == 'errorPasswordIsNull' %}
                        <span class="text-red-400">{{ message }}</span>
                    {% endif %}
                    {% if key == 'errorPasswordIsNotIdentical' %}
                        <span class="text-red-400">{{ message }}</span>
                    {% endif %}
                {% endfor %}
            </label>
        </form>
        <button type="submit" form="loginForm" name="contactFormSubmit" class="block bg-indigo-500 hover:bg-indigo-600 dark:bg-green-400 dark:hover:bg-green-500 transition ease-in-out text-white rounded mx-auto py-2 px-4">
            <span class="flex items-center">
                <span>
                    Se connecter
                </span>
            </span>
        </button>
        <div class="flex justify-center py-4">
            <a href="/register" class="text-center hover:text-indigo-500 dark:hover:text-green-400 transition ease-in-out duration-500">Vous n'avez pas de compte ? Cliquez ici pour vous inscrire</a>
        </div>
    </section>
{% endblock %}

{% block scripts %}
    <script src="js/app.js"></script>
{% endblock %}
