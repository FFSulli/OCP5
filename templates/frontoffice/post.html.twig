{% extends "/frontoffice/base.html.twig" %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
    <article class="container flex flex-col space-y-3 text-justify">
        <h2 class="text-xl font-bold text-indigo-500 dark:text-green-400">{{ post.title }}</h2>
        <p class="text-sm text-gray-400">Publié le {{ post.createdAt|date("d/m/Y \\à h:m") }} par, {% if post.updatedAt is not empty %}mis à jour le {{ post.updatedAt | date("d/m/Y \\à H:i") }}
        {% endif %}</p>
        <p class="font-bold">{{ post.excerpt }}</p>
        <p>{{ post.content }}</p>
    </article>

    <section class="flex flex-col space-y-3 my-8">
        <h3 class="text-lg font-bold text-indigo-500 dark:text-green-400">Commentaires</h3>
        {% if comments %}
            {% for comment in comments %}
                <article class="border rounded border-gray-100 hover:border-indigo-500 dark:border-gray-500 dark:hover:border-green-400 transition ease-in-out duration-500 p-4">
                    <p>{{ comment.content }}</p>
                    <p class="text-sm text-gray-400">Rédigé par {{ comment.users.first_name }}, le {{ comment.createdAt|date("d/m/Y \\à h:m") }}</p>
                </article>
            {% endfor %}
        {% else %}
            <h4>Aucun commentaires</h4>
        {% endif %}
    </section>
{% endblock %}
